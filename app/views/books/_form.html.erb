<%= form_with(model: @book, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :genre_id %>
    <%= form.collection_select :genre_id, @genres, :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>